{
  "ci": {
    "collect": {
      "url": ["http://localhost:4173/"],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage --disable-gpu --headless --disable-web-security --disable-extensions --disable-default-apps --no-first-run --disable-sync",
        "throttling": {
          "rttMs": 0,
          "throughputKbps": 0,
          "cpuSlowdownMultiplier": 1
        },
        "emulatedFormFactor": "desktop",
        "maxWaitForFcp": 30000,
        "maxWaitForLoad": 45000
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.7 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.15 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 300 }]
      }
    },
    "upload": { "target": "temporary-public-storage" }
  }
}